---
import { BlogCardReact } from './BlogCardReact';

interface Props {
  title: string
  slug: string
  description: string
  imageUrl: string
  date: string
  readTime: number
  category?: {
    name: string
    color: string
    slug: string
  }
  author: {
    name: string
    avatar: string | null
  }
  featured?: boolean
  priority?: boolean
}

const props = Astro.props
---

<BlogCardReact client:idle {...props} />

<style>
  /* Typography usando CSS variables del Layout */
  :global(.card-title) {
    font-family: var(--secondary-font);
    font-weight: var(--bold-weight);
  }

  :global(.card-description) {
    font-family: var(--main-font);
  }

  /* Las transiciones para el filtro est√°n en blog.astro */
</style>
