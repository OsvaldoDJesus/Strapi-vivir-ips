---
// Componente para iconos SVG reutilizables (evita duplicación de código)
interface Props {
  name: 'calendar' | 'clock' | 'arrow-left';
  width?: number;
  height?: number;
  class?: string;
}

const { name, width = 16, height = 16, class: className = '' } = Astro.props;

const icons = {
  calendar: `<rect x="3" y="4" width="18" height="18" rx="2" ry="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/>`,
  clock: `<circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/>`,
  'arrow-left': `<path d="M19 12H5M12 19l-7-7 7-7"/>`
};
---

<svg 
  width={width} 
  height={height} 
  viewBox="0 0 24 24" 
  fill="none" 
  stroke="currentColor" 
  stroke-width="2"
  stroke-linecap="round"
  stroke-linejoin="round"
  class={className}
  aria-hidden="true"
>
  <Fragment set:html={icons[name]} />
</svg>
